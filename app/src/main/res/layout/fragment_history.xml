<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.user.HistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingTop="@dimen/_20sdp">

        <!-- Stats Cards -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="1dp">


        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Total Appointments -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_60sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:id="@+id/iv_appointment"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_appointment" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/iv_appointment"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:id="@+id/tvTotalAppointments"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/primary_black"
                            android:fontFamily="@font/montserrat_bold"
                          />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_appointments"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/montserrat_regular" />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_line_chart_blue"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_12sdp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Total Time -->
            <!-- Total Time -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_60sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/iv_total_time_i"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_total_time" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_total_time_i"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 hours"
                            android:id="@+id/tvTotalTime"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/primary_black"
                            android:fontFamily="@font/montserrat_bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_time"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/montserrat_regular" />
                    </LinearLayout>

                    <!-- Gradient Ring + Center Text -->
                    <FrameLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_12sdp">

                        <ProgressBar
                            android:id="@+id/pbTotalTime"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="25"
                            android:progressDrawable="@drawable/progress_ring_gradient"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tvProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25%"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/primary_black"
                            android:fontFamily="@font/montserrat_bold"
                           />
                    </FrameLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- Total Cost -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="@dimen/_60sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:id="@+id/iv_appointment2"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_money" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/iv_appointment2"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$450.00"
                            android:id="@+id/tvTotalCost"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/primary_black"
                            android:fontFamily="@font/montserrat_bold"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_cost"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/montserrat_regular" />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_line_chart_blue"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_12sdp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <!-- History List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history_list"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filters"
                android:id="@+id/btn_filter"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/color_primary"
                android:fontFamily="@font/montserrat_semibold"
                android:drawableStart="@drawable/ic_filter"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical" />
        </LinearLayout>
        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_exist"
                android:contentDescription="@string/no_appointments" />

            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/no_appointments"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/book_your_first_appointment"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/color_primary"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_regular"
                android:onClick="onBookAppointmentClicked" />
        </LinearLayout>
        <!-- History Items RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_history_appointment" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="100dp" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>