<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_2sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <!-- Image -->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_image2"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/RoundImageShape10Sdp"
            />
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Doctor Visit"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_black"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/iv_user_image"
            app:layout_constraintTop_toTopOf="@+id/iv_user_image"
            app:layout_constraintEnd_toStartOf="@id/tv_cost" />


        <!-- Duration & Category -->
        <LinearLayout
            android:id="@+id/ll_meta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_image"
            app:layout_constraintStart_toEndOf="@id/iv_user_image"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toStartOf="@id/tv_cost">

            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="10 min"
                android:id="@+id/tvDuration"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:textColor="@color/gray"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="â€¢"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Health"
                android:layout_gravity="center"
                android:id="@+id/tvCategory"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/gray"
                android:fontFamily="@font/montserrat_regular" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$309.00"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            app:layout_constraintTop_toTopOf="@+id/ll_meta"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_image" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/04/26"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/primary_text_heading"
            android:textSize="@dimen/_11sdp"
            android:drawablePadding="@dimen/_3sdp"
            app:drawableLeftCompat="@drawable/ic_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_user_image"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>