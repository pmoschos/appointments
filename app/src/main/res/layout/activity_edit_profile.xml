<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".activities.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="@dimen/_31sdp"
            android:src="@drawable/ic_back_arrow"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_rounded"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_7sdp"
            />

        <!-- Search Result Title -->
        <TextView
            android:id="@+id/service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_17sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"

            />
    </RelativeLayout>
    <!-- Header -->
    <RelativeLayout
        android:id="@+id/profileContainer"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shapeAppearance="@style/RoundImageShape10dp"
            android:src="@drawable/demo_image2"
            android:scaleType="centerCrop" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/plusIcon"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_camera" />
    </RelativeLayout>


    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/profileContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_10sdp">

            <!-- First Name -->
            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:hint="Alex Carry"
                android:paddingHorizontal="@dimen/_12sdp"
                android:background="@drawable/bg_edt"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_full_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp" />
            <!-- Last Name -->
            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toBottomOf="@+id/et_name"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_l_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:hint="Alex Carry"
                android:paddingHorizontal="@dimen/_12sdp"
                android:background="@drawable/bg_edt"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_last_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp" />

            <!-- Date of Birth -->
            <TextView
                android:id="@+id/tv_date_of_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toBottomOf="@id/et_l_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10sdp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:hint="alex@gmail.com"
                android:paddingHorizontal="@dimen/_12sdp"
                android:background="@drawable/bg_edt"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@id/tv_date_of_birth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                tools:ignore="TextFields" />

            <!-- Username -->
            <TextView
                android:id="@+id/tv_d_o_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10sdp" />

            <EditText
                android:id="@+id/et_date_o_birth"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:hint="02 jan, 2022"
                android:paddingHorizontal="@dimen/_12sdp"
                android:background="@drawable/bg_edt"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_d_o_b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDone"
                android:layout_width="0dp"
                android:layout_height="@dimen/_34sdp"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_primary"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintTop_toBottomOf="@+id/et_date_o_birth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_16sdp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Save Button -->

</androidx.constraintlayout.widget.ConstraintLayout>