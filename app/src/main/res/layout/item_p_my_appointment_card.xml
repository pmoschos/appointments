<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_14sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_12sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_1sdp"

    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">

        <!-- Service Image & Title -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivService"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_39sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundImageShape10Sdp" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Dentist"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/ivService"
            app:layout_constraintTop_toTopOf="@id/ivService"
            app:layout_constraintEnd_toStartOf="@+id/iv_more"
            app:layout_constraintBottom_toTopOf="@+id/tvClinicName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvClinicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Health"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@id/ivService"
            app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
            app:layout_constraintBottom_toBottomOf="@id/ivService" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_more"
            android:id="@+id/iv_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>







        <!-- ROW 1: Duration & Category -->
        <TextView
            android:id="@+id/tv_duration_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10-15 minutes"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintStart_toStartOf="@id/tvClinicName"
            app:layout_constraintTop_toBottomOf="@id/ivService"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />



        <TextView
            android:id="@+id/tvDateValueLable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="@id/tvClinicName"
            app:layout_constraintTop_toBottomOf="@id/tv_duration_value"

            />
        <TextView
            android:id="@+id/tvDateLable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_duration_value"
            app:layout_constraintBottom_toBottomOf="@+id/tv_duration_value"

            app:layout_constraintHorizontal_chainStyle="spread_inside" />



        <TextView
            android:id="@+id/tvDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="@+id/tvDateLable"

            app:layout_constraintTop_toTopOf="@id/tvDateValueLable"
            app:layout_constraintBottom_toBottomOf="@+id/tvDateValueLable"

            />


        <!-- ROW 2: Duration & Category -->
        <TextView
            android:id="@+id/tvTimeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintStart_toStartOf="@id/tvClinicName"
            app:layout_constraintTop_toBottomOf="@id/tvDateValueLable"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />



        <TextView
            android:id="@+id/tvTimeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12:00 AM"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="@id/tvClinicName"
            app:layout_constraintTop_toBottomOf="@id/tvTimeLabel"

            />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="@dimen/_11sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTimeLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvTimeLabel"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />



        <TextView
            android:id="@+id/tvValueStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/gray"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="@+id/tvStatus"
            app:layout_constraintTop_toTopOf="@id/tvTimeValue"
            app:layout_constraintBottom_toBottomOf="@+id/tvTimeValue"

            />



        <!-- Vertical Guideline at 50% -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>