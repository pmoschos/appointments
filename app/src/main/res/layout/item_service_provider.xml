<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <!-- Image -->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_image2"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/RoundImageShape10Sdp"
            />
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Wellness Care"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_black"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_image"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/iv_user_image"
            app:layout_constraintTop_toTopOf="@+id/iv_user_image"
            app:layout_constraintEnd_toStartOf="@id/btn_book" />


        <!-- Duration & Category -->
        <LinearLayout
            android:id="@+id/ll_meta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_image"
            app:layout_constraintStart_toEndOf="@id/iv_user_image"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toStartOf="@id/btn_book">

            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.8"
                android:id="@+id/tv_rating"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/gray"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="â€¢"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/blue"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="2km Away"
                android:id="@+id/tv_distance"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/gray"
                android:fontFamily="@font/montserrat_regular" />
        </LinearLayout>



        <!-- Book Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_19sdp"
            android:text="Select"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone"
            android:insetTop="0dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:insetBottom="0dp"
            app:cornerRadius="@dimen/_20sdp"
            app:backgroundTint="@color/primary_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_meta"
            app:layout_constraintBottom_toBottomOf="@+id/ll_meta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>